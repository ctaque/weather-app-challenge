# Terraform Environment Variables
# Copiez ce fichier vers .env et remplissez les valeurs
# Puis chargez avec: source .env (ou export $(cat .env | xargs))

# DigitalOcean API Token (REQUIS)
export TF_VAR_do_token="dop_v1_xxxxxxxxxxxxx"

# Région DigitalOcean
export TF_VAR_do_region="fra1"

# Environment
export TF_VAR_environment="prod"

# Projet
export TF_VAR_project_name="weather-app"

# Droplet configuration
export TF_VAR_droplet_size="s-1vcpu-2gb"
export TF_VAR_droplet_image="ubuntu-22-04-x64"

# SSH Key - Nom de la clé dans votre compte DigitalOcean
export TF_VAR_ssh_key_name="weather-app-key"

# IP autorisées pour SSH
# Note: Pour les listes, utilisez la syntaxe JSON
export TF_VAR_ssh_allowed_ips='["0.0.0.0/0", "::/0"]'

# Database PostgreSQL (Local sur le droplet)
export TF_VAR_db_name="weatherapp"
export TF_VAR_db_username="weatherapp_user"
export TF_VAR_db_password="CHANGE_ME_STRONG_PASSWORD"

# API Keys (REQUIS)
export TF_VAR_weatherapi_key="your_weatherapi_key_here"
export TF_VAR_anthropic_api_key="sk-ant-xxxxxxxxxxxxx"

# Domain (optionnel)
export TF_VAR_domain_name=""
