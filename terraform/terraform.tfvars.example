# AWS Configuration
aws_region  = "eu-west-3" # Paris
environment = "prod"

# EC2 Configuration
ec2_instance_type = "t3.micro"
ec2_key_name      = "your-key-name" # Créer une clé SSH dans AWS EC2

# SSH Access (à restreindre!)
ssh_allowed_ips = ["0.0.0.0/0"] # Remplacer par votre IP: ["1.2.3.4/32"]

# RDS Configuration
rds_instance_type = "db.t4g.micro"
db_name           = "weatherapp"
db_username       = "weatherapp_user"
db_password       = "CHANGE_ME_STRONG_PASSWORD_123"

# API Keys
weatherapi_key    = "your_weatherapi_key_here"
anthropic_api_key = "your_anthropic_key_here"

# Domain (optionnel)
domain_name = "" # Laisser vide ou mettre votre domaine
